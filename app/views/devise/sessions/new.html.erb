<header class="header_2">
  <a><%= link_to "- Create Free Blogs -", root_path, class:"title_2" %></a>
</header>


<div class ="back-ground">
<br>
<div class= "all">
<h2 class="device_title">Log in</h2>

<div class="field-wrapper">
  <code>ここでログインができるよ。</code>
  <br>
  <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
    <a>Email</a>
   <code>    ---アドレスを入力してね。---</code><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <br>
    <div class="field">
    <a>Password</a>
   <code>    ---パスワードを入力してね。---</code><br>
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
    <div class="field">
    <code>---チェックをすると、パスワードを保存できるよ。---</code><br>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br>
    <br>
    </div>
    <% end %>

    <div class="actions">
    <%= f.submit "Log in" %>
    </div>
    <% end %>
    </div>
    <br>
<%= render "devise/shared/links" %>
</div>
</div>

<div class= "footer">
</div>
